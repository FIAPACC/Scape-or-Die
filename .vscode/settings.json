{
	"[lua]": {
		"editor.defaultFormatter": "JohnnyMorganz.stylua",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll": "always"
		}
	},
	"[luau]": {
		"editor.defaultFormatter": "JohnnyMorganz.stylua",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll": "always"
		}
	},
	"workbench.editor.customLabels.patterns": {
		"**/init.lua": "${dirname} (${filename}.${extname})",
		"**/init.luau": "${dirname} (${filename}.${extname})",
		"**/init.client.luau": "${dirname} (${filename}.${extname})",
		"**/init.server.luau": "${dirname} (${filename}.${extname})"
	},
	"luau-lsp.platform.type": "roblox",
	"luau-lsp.diagnostics.workspace": true,
	
	"workbench.colorCustomizations": {
		"editor.background": "#252525",                    // Background Color: 37, 37, 37
		"editor.foreground": "#CCCCCC",                    // Text Color: 204, 204, 204
		"editor.selectionBackground": "#0B5AAF",           // Selection Background: 11, 90, 175
		"editor.selectionForeground": "#FFFFFF",           // Selection Color: 255, 255, 255
		"editor.lineHighlightBackground": "#2D3241",       // Current Line Highlight: 45, 50, 65
		"editor.findMatchBackground": "#8D7600",           // Find Selection Background: 141, 118, 0
				"editor.wordHighlightBackground": "#55555566",  // Word highlight - cinza com transparência
		"editor.rulers": ["#666666"],                      // Script Ruler Color: 102, 102, 102
		"editorWhitespace.foreground": "#555555",          // Whitespace Color: 85, 85, 85
		"editorBracketHighlight.foreground1": "#CCCCCC",   // Script Bracket Color: 204, 204, 204
		"editorBracketHighlight.foreground2": "#CCCCCC",
		"editorBracketHighlight.foreground3": "#CCCCCC",
		"editorBracketHighlight.foreground4": "#CCCCCC",
		"editorBracketHighlight.foreground5": "#CCCCCC",
		"editorBracketHighlight.foreground6": "#CCCCCC"
	},
	
	"editor.semanticHighlighting.enabled": false,
	"editor.semanticTokenColorCustomizations": {
		"rules": {
			"defaultLibrary": {
				"foreground": "#266c74"
			},
			"namespace": {
				"foreground": "#44e7f9"
			},
			"parameter": {
				"foreground": "#cccccc",
				"fontStyle": "italic"
			},
			"property": {
				"foreground": "#CCCCCC"
			},
			"type": {
				"foreground": "#00ffff"
			},
			"method": {
				"fontStyle": "italic"
			},
			"keyword": {
				"foreground": "#f77575",
				"fontStyle": "bold"
			},
			"function": { 
				"foreground": "#00FFFF" 
			}
		}
	},
	
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				// KEYS DE TYPE TABLE (variable.property.luau)
				"scope": [
					"variable.property.luau"
				],
				"settings": {
					"foreground": "#CCCCCC"
				}
			},
			{
				// TYPEOF exclusivo via injection
				"scope": [
					"keyword.operator.typeof.luau"
				],
				"settings": {
					"foreground": "#F86D7C",
					"fontStyle": "bold"
				}
			},
			{
				// KEYWORDS: if, then, else, function, local (ROBLOX: 248, 109, 124)
				"scope": [
					"keyword",
					"keyword.control",
					"storage.type",
					"storage.modifier"
				],
				"settings": {
					"foreground": "#F86D7C",
                    "fontStyle": "bold"
				}
			},
			{
				// SELF: self (ROBLOX: 248, 109, 124 - mesma cor de function)
				"scope": [
					"variable.language.special.self",
					"variable.language.self",
					"variable.language.self.luau",
					"variable.language.super",
					"variable.language.this",
					"keyword.operator.wordlike"
				],
				"settings": {
					"foreground": "#F86D7C"
				}
			},
			{
				// SETMETATABLE e REQUIRE: (ROBLOX: 132, 214, 247)
				"scope": [
					"support.function"
				],
				"settings": {
					"foreground": "#84D6F7"
				}
			},
			{
				// PARÂMETROS e VARIÁVEIS: (ROBLOX: 204, 204, 204 - mesma cor dos {})
				"scope": [
					"variable.parameter",
					"variable.other.readwrite",
					"variable.other.luau"
				],
				"settings": {
					"foreground": "#CCCCCC"
				}
			},
			{
				// PUNCTUATION: {}, [], (), : (ROBLOX: 204, 204, 204)
				"scope": [
					"punctuation.separator",
					"punctuation.terminator",
					"punctuation.accessor",
					"punctuation.section.brackets",
					"punctuation.section.braces", 
					"punctuation.section.parens",
					"punctuation.definition.table",
					"meta.brace"
				],
				"settings": {
					"foreground": "#CCCCCC"
				}
			},
			{
				// KEYS EM TIPAGEM: DeskContents, HiddenContents (ROBLOX: 204, 204, 204)
				"scope": [
					"meta.table.key",
					"entity.name.tag",
					"string.unquoted",
					"constant.other.key"
				],
				"settings": {
					"foreground": "#CCCCCC"
				}
			},
			{
				// COMENTÁRIOS: -- comentário (ROBLOX: 102, 102, 102)
				"scope": [
					"comment",
					"punctuation.definition.comment"
				],
				"settings": {
					"foreground": "#666666",
					"fontStyle": "italic"
				}
			},
			{
				// BOOLEANS e NIL: true, false, nil (ROBLOX: 255, 198, 0)
				"scope": [
					"constant.language.boolean.true",
					"constant.language.boolean.false",
					"constant.language.nil"
				],
				"settings": {
					"foreground": "#FFC600",
					"fontStyle": "bold"
				}
			},
			{
				// STRINGS: "texto", 'texto' (ROBLOX: 173, 241, 149)
				"scope": [
					"string.quoted.single",
					"string.quoted.double",
					"string",
					"punctuation.definition.string"
				],
				"settings": {
					"foreground": "#ADF195"
				}
			},
			{
				// FUNCTION NAMES: minhaFuncao() (ROBLOX: 253, 251, 172)
				"scope": [
					"entity.name.function",
					"entity.name.function.method"
				],
				"settings": {
					"foreground": "#FDFBAC"
				}
			},
			{
				// NÚMEROS: 123, 45.67, 0xFF (ROBLOX: 253, 198, 0)
				"scope": [
					"constant.numeric",
					"variable.other.constant.luau"
				],
				"settings": {
					"foreground": "#FFC600"
				}
			},
			{
				// OPERADORES: +, -, *, ==, ~= (ROBLOX: 204, 204, 204)
				"scope": [
					"keyword.operator",
					"meta.template.expression.ts"
],
				"settings": {
					"foreground": "#cccccc"
				}
			},
			{
				// LOCAL PROPERTIES: .Name, .Color, .Parent (ROBLOX: 97, 161, 241)
				"scope": [
					"entity.other.attribute",
					"variable.language.metamethod",
					"variable.other.property",
					"meta.attribute",
					"meta.member.access"
				],
				"settings": {
					"foreground": "#61A1F1"
				}
			},
			{
				// TYPES: Part, string, workspace (ROBLOX: 0, 255, 255)
				"scope": [
					"entity.name.type",
					"support.type",
					"support.constant.luau"
				],
				"settings": {
					"foreground": "#00FFFF"
				}
			}
		]
	}
}
