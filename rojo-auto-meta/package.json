{
    "name": "rojo-auto-meta",
    "displayName": "Rojo Auto Meta",
    "description": "Automatically creates init.meta.json files for new folders in Rojo projects",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": ["Other"],
    "activationEvents": [
        "workspaceContains:default.project.json"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "rojoAutoMeta.createMeta",
                "title": "Criar init.meta.json",
                "category": "Rojo"
            },
            {
                "command": "rojoAutoMeta.toggleAutoCreate",
                "title": "Alternar criação automática",
                "category": "Rojo"
            }
        ],
        "configuration": {
            "title": "Rojo Auto Meta",
            "properties": {
                "rojoAutoMeta.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Habilitar criação automática de init.meta.json"
                },
                "rojoAutoMeta.watchPaths": {
                    "type": "array",
                    "default": ["src/**"],
                    "description": "Caminhos para monitorar (glob patterns)"
                }
            }
        }
    }
}
